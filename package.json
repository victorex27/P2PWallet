{
    "name": "p2pwallet",
    "version": "1.0.0",
    "description": "A P2P Wallet System Using PayStack.",
    "main": "index.js",
    "scripts": {
        "test": "mocha -r ts-node/register ./src/tests/**/*.test.ts",
        "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "postinstall":"tsc",
        "start:dev": "tsc --project tsconfig.build.json && nodemon dist/index.js",
        "start": "NODE_ENV=production node dist/index.js",
        "typeorm": "typeorm-ts-node-commonjs",
        "generate:migration": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm -d ./src/data-source.ts migration:generate ./src/migration/User-And-Transaction-Record",
        "migration": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm  -d ./src/data-source.ts migration:run",
        "migration:revert": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm  -d ./src/data-source.ts migration:revert",
        "migration:stage": "NODE_ENV=production ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm  -d ./dist/data-source.js migration:run",
        "migration:stage:revert": "NODE_ENV=production ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm  -d ./dist/data-source.js migration:revert",
        "migration:test": "NODE_ENV=test ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm -d ./src/data-source.ts migration:run",
        "migration:test:revert": "NODE_ENV=test ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm  -d ./src/data-source.ts migration:revert"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/victorex27/P2PWallet.git"
    },
    "author": "Obikobe Amaobi Victor",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/victorex27/P2PWallet/issues"
    },
    "homepage": "https://github.com/victorex27/P2PWallet#readme",
    "dependencies": {
        "axios": "^0.27.2",
        "bcryptjs": "^2.4.3",
        "class-validator": "^0.13.2",
        "config": "^3.3.7",
        "express": "^4.18.1",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "0.3.9"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/chai": "^4.3.3",
        "@types/chai-http": "^4.2.0",
        "@types/config": "^3.3.0",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/mocha": "^9.1.1",
        "@types/node": "^16.11.10",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "mocha": "^10.0.0",
        "mocha-junit-reporter": "^2.0.2",
        "nock": "^13.2.9",
        "nodemon": "^2.0.19",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "ts-node": "10.7.0",
        "typescript": "4.5.2"
    }
}
